<div class="jumbotron">
  <div class="hero">
      <h3> Enter your username and password to login. </h3><br>
      <%= form_for(@user) do |f| %>
        <%= f.label :name %>
        <%= f.text_field :name %>
        <%= f.label :password %>
        <%= f.password_field :password %>
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation %>
        <%= f.submit 'Create Account' %>
      <% end %>
  </div>
</div>
